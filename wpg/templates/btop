# bpytop template for wpgtk
# by improvisedexplosivedevice

# Colors should be in 6 or 2 character hexadecimal or single spaced rgb decimal: "#RRGGBB", "#BW" or "0-255 0-255 0-255"
# example for white: "#ffffff", "#ff" or "255 255 255".

# All graphs and meters can be gradients
# For single color graphs leave "mid" and "end" variable empty.
# Use "start" and "end" variables for two color gradient
# Use "start", "mid" and "end" for three color gradient


# TEXT
theme[main_fg]="#cee8e0"          # Main text color
theme[title]="#cee8e0"            # Title color for boxes
theme[hi_fg]="#8CCEB8"            # Higlight color for keyboard shortcuts
theme[inactive_fg]="#90a29c"       # Color of inactive/disabled text
theme[graph_text]="#94D9C3"       # Color of text appearing on top of graphs, i.e uptime and current network graph scaling


# OTHER
theme[main_bg]="#110c04"           # Main background, empty for terminal default, need to be empty if you want transparent background
theme[selected_bg]="#5c8577"       # Background color of selected item in processes box
theme[selected_fg]="#cee8e0"       # Foreground color of selected item in processes box
theme[proc_misc]="#94D9C3"        # Misc colors for processes box including mini cpu graphs, details memory graph and details status text


# OUTLINES
theme[cpu_box]="#8CCEB8"           # Cpu box outline color
theme[mem_box]="#73A795"           # Memory/disks box outline color
theme[net_box]="#8CCEB8"           # Net up/down box outline color
theme[proc_box]="#73A795"          # Processes box outline color
theme[div_line]="#73A795"          # Box divider line and small boxes line color


# METERS
theme[meter_bg]="#90a29c"          # Background color of the percentage meters
theme[used_start]="#94D9C3"        # Mem/Disk used meter
theme[used_mid]=""
theme[used_end]="#94D9C3"
theme[available_start]="#A5DAC9"   # Mem/Disk available meter
theme[available_mid]=""
theme[available_end]="#A5DAC9"
theme[cached_start]="#94D9C3"      # Mem/Disk cached meter
theme[cached_mid]=""
theme[cached_end]="#94D9C3"
theme[free_start]="#A5DAC9"        # Mem/Disk free meter
theme[free_mid]=""
theme[free_end]="#A5DAC9"


# GRAPHS
theme[temp_start]="#367bf0"         # Temperature graph colors
theme[temp_mid]="#b8174c"
theme[temp_end]="#d41919"
theme[cpu_start]="#8CCEB8"        # CPU graph colors
theme[cpu_mid]="#92AF9D"
theme[cpu_end]="#73A795"
theme[download_start]="#94D9C3"    # Download graph colors
theme[download_mid]="#73A795"
theme[download_end]="#73A795"  
theme[upload_start]="#92AF9D"     # Upload graph colors
theme[upload_mid]="#92AF9D"
theme[upload_end]="#A5DAC9"
theme[process_start]="#94D9C3"    # Process box color gradient for threads, mem and cpu usage
theme[process_mid]="#A5DAC9"
theme[process_end]="#A8C6B3"