# bpytop template for wpgtk
# by improvisedexplosivedevice

# Colors should be in 6 or 2 character hexadecimal or single spaced rgb decimal: "#RRGGBB", "#BW" or "0-255 0-255 0-255"
# example for white: "#ffffff", "#ff" or "255 255 255".

# All graphs and meters can be gradients
# For single color graphs leave "mid" and "end" variable empty.
# Use "start" and "end" variables for two color gradient
# Use "start", "mid" and "end" for three color gradient


# TEXT
theme[main_fg]="#d3dace"          # Main text color
theme[title]="#d3dace"            # Title color for boxes
theme[hi_fg]="#ADA668"            # Higlight color for keyboard shortcuts
theme[inactive_fg]="#939890"       # Color of inactive/disabled text
theme[graph_text]="#02B4D1"       # Color of text appearing on top of graphs, i.e uptime and current network graph scaling


# OTHER
theme[main_bg]="#0E2C2F"           # Main background, empty for terminal default, need to be empty if you want transparent background
theme[selected_bg]="#0c7d51"       # Background color of selected item in processes box
theme[selected_fg]="#d3dace"       # Foreground color of selected item in processes box
theme[proc_misc]="#02B4D1"        # Misc colors for processes box including mini cpu graphs, details memory graph and details status text


# OUTLINES
theme[cpu_box]="#ADA668"           # Cpu box outline color
theme[mem_box]="#0F9D66"           # Memory/disks box outline color
theme[net_box]="#ADA668"           # Net up/down box outline color
theme[proc_box]="#0F9D66"          # Processes box outline color
theme[div_line]="#0F9D66"          # Box divider line and small boxes line color


# METERS
theme[meter_bg]="#939890"          # Background color of the percentage meters
theme[used_start]="#02B4D1"        # Mem/Disk used meter
theme[used_mid]=""
theme[used_end]="#02B4D1"
theme[available_start]="#9AA5A6"   # Mem/Disk available meter
theme[available_mid]=""
theme[available_end]="#9AA5A6"
theme[cached_start]="#02B4D1"      # Mem/Disk cached meter
theme[cached_mid]=""
theme[cached_end]="#02B4D1"
theme[free_start]="#9AA5A6"        # Mem/Disk free meter
theme[free_mid]=""
theme[free_end]="#9AA5A6"


# GRAPHS
theme[temp_start]="#367bf0"         # Temperature graph colors
theme[temp_mid]="#b8174c"
theme[temp_end]="#d41919"
theme[cpu_start]="#ADA668"        # CPU graph colors
theme[cpu_mid]="#50A959"
theme[cpu_end]="#0F9D66"
theme[download_start]="#02B4D1"    # Download graph colors
theme[download_mid]="#0F9D66"
theme[download_end]="#0F9D66"  
theme[upload_start]="#50A959"     # Upload graph colors
theme[upload_mid]="#50A959"
theme[upload_end]="#9AA5A6"
theme[process_start]="#02B4D1"    # Process box color gradient for threads, mem and cpu usage
theme[process_mid]="#9AA5A6"
theme[process_end]="#4BB799"