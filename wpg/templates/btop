# bpytop template for wpgtk
# by improvisedexplosivedevice

# Colors should be in 6 or 2 character hexadecimal or single spaced rgb decimal: "#RRGGBB", "#BW" or "0-255 0-255 0-255"
# example for white: "#ffffff", "#ff" or "255 255 255".

# All graphs and meters can be gradients
# For single color graphs leave "mid" and "end" variable empty.
# Use "start" and "end" variables for two color gradient
# Use "start", "mid" and "end" for three color gradient


# TEXT
theme[main_fg]="#dfe9da"          # Main text color
theme[title]="#dfe9da"            # Title color for boxes
theme[hi_fg]="#299A93"            # Higlight color for keyboard shortcuts
theme[inactive_fg]="#9ca398"       # Color of inactive/disabled text
theme[graph_text]="#489D9F"       # Color of text appearing on top of graphs, i.e uptime and current network graph scaling


# OTHER
theme[main_bg]="#033155"           # Main background, empty for terminal default, need to be empty if you want transparent background
theme[selected_bg]="#346372"       # Background color of selected item in processes box
theme[selected_fg]="#dfe9da"       # Foreground color of selected item in processes box
theme[proc_misc]="#489D9F"        # Misc colors for processes box including mini cpu graphs, details memory graph and details status text


# OUTLINES
theme[cpu_box]="#299A93"           # Cpu box outline color
theme[mem_box]="#427D8F"           # Memory/disks box outline color
theme[net_box]="#299A93"           # Net up/down box outline color
theme[proc_box]="#427D8F"          # Processes box outline color
theme[div_line]="#427D8F"          # Box divider line and small boxes line color


# METERS
theme[meter_bg]="#9ca398"          # Background color of the percentage meters
theme[used_start]="#489D9F"        # Mem/Disk used meter
theme[used_mid]=""
theme[used_end]="#489D9F"
theme[available_start]="#A0CCBA"   # Mem/Disk available meter
theme[available_mid]=""
theme[available_end]="#A0CCBA"
theme[cached_start]="#489D9F"      # Mem/Disk cached meter
theme[cached_mid]=""
theme[cached_end]="#489D9F"
theme[free_start]="#A0CCBA"        # Mem/Disk free meter
theme[free_mid]=""
theme[free_end]="#A0CCBA"


# GRAPHS
theme[temp_start]="#367bf0"         # Temperature graph colors
theme[temp_mid]="#b8174c"
theme[temp_end]="#d41919"
theme[cpu_start]="#299A93"        # CPU graph colors
theme[cpu_mid]="#0D9288"
theme[cpu_end]="#427D8F"
theme[download_start]="#489D9F"    # Download graph colors
theme[download_mid]="#427D8F"
theme[download_end]="#427D8F"  
theme[upload_start]="#0D9288"     # Upload graph colors
theme[upload_mid]="#0D9288"
theme[upload_end]="#A0CCBA"
theme[process_start]="#489D9F"    # Process box color gradient for threads, mem and cpu usage
theme[process_mid]="#A0CCBA"
theme[process_end]="#09AB8F"